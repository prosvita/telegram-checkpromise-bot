{
  "name": "telegram-checkpromise-bot",
  "version": "0.0.1",
  "description": "Стежимо за успіхами влади. Telegram Bot",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "$(npm bin)/nodemon -e js,json,yaml --ignore db/ --ignore test/ index.js",
    "dev-static": "$(npm bin)/http-server",
    "docker-build": "docker build -t levonet/telegram-checkpromise-bot:latest .",
    "docker-push": "docker push levonet/telegram-checkpromise-bot:latest",
    "deploy-ansible": "cd playbook; ansible-playbook deploy-host.yml -e deploy_group=all -e project_bot_token=${TG_TOKEN} -i ${INVENTORY_HOSTNAME},",
    "deploy": "npm run docker-build; npm run docker-push; npm run deploy-ansible",
    "lint": "$(npm bin)/eslint .",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prosvita/telegram-checkpromise-bot.git"
  },
  "keywords": [
    "telegram-bot"
  ],
  "author": "Pavlo Bashynskyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prosvita/telegram-checkpromise-bot/issues"
  },
  "homepage": "https://github.com/prosvita/telegram-checkpromise-bot#readme",
  "dependencies": {
    "got": "^9.6.0",
    "loglevel": "^1.6.3",
    "node-schedule": "^1.3.2",
    "string-hash": "^1.1.3",
    "telegraf": "^3.30.1",
    "telegraf-i18n": "^6.5.0",
    "telegraf-session-local": "0.0.6"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "http-server": "^0.11.1",
    "husky": "^2.4.1",
    "nodemon": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
